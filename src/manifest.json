{
  "manifest_version": 3,
  "name": "Maester Navigator",
  "description": "Live map browser extension for Game of Thrones and House of Dragons.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ]
}